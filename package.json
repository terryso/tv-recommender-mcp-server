{
  "name": "tv-recommender-mcp-server",
  "version": "0.1.5",
  "description": "MCP server for TV show recommendations",
  "main": "dist/server.js",
  "bin": {
    "tv-recommender-mcp-server": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test-api": "ts-node src/utils/testTMDbConnection.ts",
    "test-recommendations": "ts-node src/utils/testRecommendationsTool.ts",
    "test-similar": "ts-node src/utils/testSimilarShowsTool.ts",
    "test-details": "ts-node src/utils/testShowDetailsTool.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "tv-shows",
    "recommendations",
    "tmdb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@types/node": "^20.12.2",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "typescript": "^5.4.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "bin"
  ]
}
